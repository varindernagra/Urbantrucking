<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.trucklog.Fragments.LoadListFragment"
    android:background="@drawable/loads_bg">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:layout_gravity="center"
            android:id="@+id/radiogroup_home">
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="All"
                android:textOff="All"
                android:gravity="center_vertical|center_horizontal|center"
                android:background="@drawable/togglebutton_background"
                android:textColor="@color/togglebutton_color"
                android:checked="false"
                android:id="@+id/toggle_home_all"
                android:textAllCaps="false" />
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="Active"
                android:textOff="Active"
                android:gravity="center_vertical|center_horizontal|center"
                android:background="@drawable/togglebutton_background"
                android:textColor="@color/togglebutton_color"
                android:id="@+id/toggle_home_active"
                android:textAllCaps="false"
                android:checked="true" />
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="Inactive"
                android:textOff="Inactive"
                android:background="@drawable/togglebutton_background"
                android:textColor="@color/togglebutton_color"
                android:id="@+id/toggle_home_inactive"
                android:textAllCaps="false" />
        </RadioGroup>
        <!---->
        <!--</LinearLayout>-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/list_home_load"
                android:divider="@null" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/pg_indicator"
            android:layout_gravity="center"
            android:layout_width="90dp"
            android:layout_height="90dp" />
    </FrameLayout>

</LinearLayout>
