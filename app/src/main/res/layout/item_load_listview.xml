<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@color/grayColor"
        android:layout_gravity="center"
        android:padding="15dp">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_fiber_manual_record_black_24dp"
            android:tint="@color/colorPrimary"
            android:layout_gravity="center" />

        <TextView
            android:text="Loads 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_item_loadname"
            android:layout_weight="1"
            android:gravity="center" />

        <ImageView
            android:id="@+id/img_item_indicator"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_black_24dp"
            android:tint="@color/activeColor"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <TextView
            android:text="Active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_item_indicator"
            android:textColor="@color/activeColor" />
    </LinearLayout>
</LinearLayout>